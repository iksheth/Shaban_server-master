<%
    var document_title = '';
    if (typeof lecture === 'object') {
        var lectureId = lecture.id;
    }
    var id = 0;
    var url = '';
    var order = 0;
    if (typeof documents === 'object') {
        order = documents.length;
    }
    var button = 'Create';
    var heading = 'Add a new Document'
    if (typeof document === 'object') {
        var lectureId = document.lecture;
        document_title = document.title;
        id = document.id;
        url = document.url;
        order = document.order;
        button = 'Save'
        heading = 'Edit Document'
    }
%>
<form method="post" action="/document" class="form-horizontal" enctype="multipart/form-data">

    <h4 class="text-center"><%= heading %></h4>

    <!-- hidden id and lectureId -->
    <input type="hidden" name="id" value="<%= id %>">
    <input type="hidden" name="lecture" value="<%= lectureId %>">

    <!-- document_title -->
    <div class="form-group">
        <label class="control-label col-sm-2 " for="title">Document Title</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="lecture name" name="title" value="<%= document_title %>">
        </div>
    </div>

    <!-- order -->
    <div class="form-group">
        <label class="control-label col-sm-2" for="order">Order</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="order" name="order" value="<%= order %>">
        </div>
    </div>


    <!-- url -->
    <% if (url) { %>
        <div class="form-group">
            <label class="control-label col-sm-2" for="url"></label>
            <div class="col-sm-10 text-left">
                <a class="" id="url" href="<%= url %>" target="_blank">Preview uploaded document</a>
            </div>
        </div>
    <% } %>
    <div class="form-group">
        <label class="control-label col-sm-2" for="url">File</label>
        <div class="col-sm-10">
            <input class="form-control" type="file" id="url" name="document" value="<%= url %>">
        </div>
    </div>

    <!-- buttons -->
    <div class="form-group">
        <div class="col-md-offset-3 col-lg-6">
            <input class="form-control btn btn-primary" type="submit" value="<%= button %>">
        </div>
    </div>
</form>
