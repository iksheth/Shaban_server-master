<%
    var resource_title = '';
    if (typeof lecture === 'object') {
        var lectureId = lecture.id;
    }
    var id = 0;
    var url = '';
    var order = 0;
    if (typeof resources === 'object') {
        order = resources.length;
    }
    var button = 'Create';
    var heading = 'Add a new Resource'
    if (typeof resource === 'object') {
        var lectureId = resource.lecture;
        resource_title = resource.title;
        id = resource.id;
        url = resource.url;
        order = resource.order;
        button = 'Save'
        heading = 'Edit Resource'
    }
%>
<form method="post" action="/resource" class="form-horizontal" enctype="multipart/form-data">

    <h4 class="text-center"><%= heading %></h4>

    <!-- hidden id and lectureId -->
    <input type="hidden" name="id" value="<%= id %>">
    <input type="hidden" name="lecture" value="<%= lectureId %>">

    <!-- resource_title -->
    <div class="form-group">
        <label class="control-label col-sm-2 " for="title">Resource Title</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="lecture name" name="title" value="<%= resource_title %>">
        </div>
    </div>

    <!-- order -->
    <div class="form-group">
        <label class="control-label col-sm-2" for="order">Order</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="order" name="order" value="<%= order %>">
        </div>
    </div>


    <!-- url -->
    <% if (url) { %>
        <div class="form-group">
            <label class="control-label col-sm-2" for="url"></label>
            <div class="col-sm-10 text-left">
                <a class="" id="url" href="<%= url %>" target="_blank">Preview uploaded resource</a>
            </div>
        </div>
    <% } %>
    <div class="form-group">
        <label class="control-label col-sm-2" for="url">File</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="url" name="url" value="<%= url %>">
        </div>
    </div>

    <!-- buttons -->
    <div class="form-group">
        <div class="col-md-offset-3 col-lg-6">
            <input class="form-control btn btn-primary" type="submit" value="<%= button %>">
        </div>
    </div>
</form>
